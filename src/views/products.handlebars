<link rel="stylesheet" href="../public/css/style.css">
<div>
    <div class="container mb-5">
        <div class="row">
            <div class="col d-flex align-items-center justify-content-end">
                <ul class="nav justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/products">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/realtimeproducts">Real Time Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/profile">Profile</a>
                    </li>
                    <li>
                        <button id="cartButton">CART</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="user-data">
                <h1>Bienvenido, {{user.first_name}} {{user.last_name}}</h1>
                <p>Tu correo electrónico es: {{user.email}}</p>
                <p>Tu rol es: {{user.role}}</p>
            </div>
        </div>
        <form action="/api/sessions/logout" method="POST">
            <button type="submit" class="btn-logout">Cerrar Sesión</button>
        </form>
    </div>
    <div class="shopContent">
        {{#each products.payload}}
        <div>
            <div class="card">
                <a href="/products/{{this._id}}" class="card">
                    <img src="{{this.thumbnails}}" class="img-fluid" alt="{{this.title}}">
                </a>
                <div class="card-body text-center">
                    <p class="card-text text-dark">{{this.title}}<br><span class="text-danger">${{this.price}}</span>
                    </p>
                    <p><button class="btn btn-dark" onclick="agregarProductoAlCarrito('{{product._id}}')">Agregar
                        </button></p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="row my-5">
        <div class="col">
            <nav>
                <ul class="pagination justify-content-center">
                    {{#if products.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="{{products.prevLink}}">
                            <<< /a>
                    </li>
                    {{/if}}
                    {{#if products.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="{{products.prevLink}}">{{products.prevPage}}</a>
                    </li>
                    {{/if}}
                    <li class="page-item">
                        <a class="page-link">{{products.page}}</a>
                    </li>
                    {{#if products.hasNextPage}}
                    <li class="page-item">
                        <a class="page-link" href="{{products.nextLink}}">{{products.nextPage}}</a>
                    </li>
                    {{/if}}
                    {{#if products.hasNextPage}}
                    <li class="page-item">
                        <a class="page-link" href="{{products.nextLink}}">>></a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
        </div>
    </div>
</div>

<script src="js/cart.js"></script>

<script src="../public/products.js"></script>